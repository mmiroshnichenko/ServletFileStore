        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">${JDBC_DATABASE_URL:jdbc:mysql://localhost:3306/file_store}</property>
        <property name="hibernate.connection.username">${JDBC_DATABASE_USERNAME:root}</property>
        <property name="hibernate.connection.password">${JDBC_DATABASE_PASSWORD:elhI;Ylx,3))}</property>
        <property name="hibernate.default_schema">file_store</property>

        <mapping class="org.mmyroshnychenko.model.User"/>
